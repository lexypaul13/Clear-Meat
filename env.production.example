# Clear-Meat API Production Environment Configuration
# Copy this file to .env and update with your actual values

# === ENVIRONMENT ===
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# === SECURITY (REQUIRED) ===
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-production-secret-key-at-least-32-chars

# MUST be false in production
ENABLE_AUTH_BYPASS=false

# === DATABASE ===
DATABASE_URL=postgresql://username:password@your-db-host:5432/dbname
DATABASE_SSL_MODE=require  # Use 'require' or 'verify-full' for production

# === SUPABASE (REQUIRED) ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# === AI SERVICES ===
GEMINI_API_KEY=your-gemini-api-key

# === RATE LIMITING ===
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BY_IP=true

# === REDIS (OPTIONAL BUT RECOMMENDED) ===
REDIS_URL=redis://username:password@your-redis-host:6379/0
REDIS_TTL=3600

# === CORS ===
# Comma-separated list of allowed origins
BACKEND_CORS_ORIGINS=https://your-frontend-domain.com,https://app.yourdomain.com

# === MONITORING (OPTIONAL) ===
# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# === API CONFIGURATION ===
API_V1_STR=/api/v1
HOST=0.0.0.0
PORT=8000

# === SSL/TLS ===
# If using HTTPS directly (not behind a proxy)
SSL_CERT_FILE=/path/to/cert.pem
SSL_KEY_FILE=/path/to/key.pem

# === BACKUP CONFIGURATION ===
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30 